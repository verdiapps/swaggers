{
	"openapi": "3.0.0",
	"info": {
		"title": "Mobile Measurements API",
		"version": "1.0.0",
		"description": "API for managing body measurements with authentication"
	},
	"security": [
		{
			"bearerAuth": []
		},
		{
			"cookieAuth": []
		}
	],
	"paths": {
		"/health": {
			"get": {
				"summary": "Health check endpoint",
				"description": "Check the health status of the API and database connectivity",
				"tags": ["Health"],
				"security": [],
				"responses": {
					"200": {
						"description": "Service is healthy",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HealthResponse"
								}
							}
						}
					},
					"503": {
						"description": "Service is degraded (database disconnected)",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HealthResponse"
								}
							}
						}
					}
				}
			}
		},
		"/measurement": {
			"post": {
				"summary": "Create a new measurement",
				"description": "Add a new body measurement for the authenticated user",
				"tags": ["Measurements"],
				"security": [
					{
						"bearerAuth": []
					},
					{
						"cookieAuth": []
					}
				],
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/MeasurementInput"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Measurement created successfully",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Measurement"
								}
							}
						}
					},
					"400": {
						"description": "Validation error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ValidationError"
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized - missing or invalid access token",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Error"
								}
							}
						}
					}
				}
			},
			"get": {
				"summary": "Get measurements with filtering",
				"description": "Retrieve measurements for the authenticated user with optional filtering and pagination",
				"tags": ["Measurements"],
				"security": [
					{
						"bearerAuth": []
					},
					{
						"cookieAuth": []
					}
				],
				"parameters": [
					{
						"name": "type",
						"in": "query",
						"required": false,
						"description": "Filter by measurement type",
						"schema": {
							"type": "string",
							"enum": [
								"weight",
								"waist",
								"shoulder",
								"hip",
								"hips",
								"chest",
								"steps",
								"height"
							]
						}
					},
					{
						"name": "sort",
						"in": "query",
						"required": false,
						"description": "Sort order by creation date",
						"schema": {
							"type": "string",
							"enum": ["asc", "desc"],
							"default": "asc"
						}
					},
					{
						"name": "offset",
						"in": "query",
						"required": false,
						"description": "Number of records to skip",
						"schema": {
							"type": "integer",
							"minimum": 0,
							"default": 0
						}
					},
					{
						"name": "limit",
						"in": "query",
						"required": false,
						"description": "Maximum number of records to return",
						"schema": {
							"type": "integer",
							"minimum": 1,
							"default": 10
						}
					}
				],
				"responses": {
					"200": {
						"description": "Measurements retrieved successfully",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/Measurement"
									}
								}
							}
						}
					},
					"400": {
						"description": "Validation error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ValidationError"
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized - missing or invalid access token",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Error"
								}
							}
						}
					}
				}
			}
		},
		"/measurement/{id}": {
			"get": {
				"summary": "Get a specific measurement by ID",
				"description": "Retrieve a single measurement by its ID. Users can only access their own measurements unless they have 'get-all-measurements' permission.",
				"tags": ["Measurements"],
				"security": [
					{
						"bearerAuth": []
					},
					{
						"cookieAuth": []
					}
				],
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"description": "UUID of the measurement to retrieve",
						"schema": {
							"type": "string",
							"format": "uuid"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Measurement retrieved successfully",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Measurement"
								}
							}
						}
					},
					"400": {
						"description": "Validation error - invalid ID format",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ValidationError"
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized - missing or invalid access token",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Error"
								}
							}
						}
					},
					"404": {
						"description": "Measurement not found or not authorized to access",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Error"
								}
							}
						}
					}
				}
			},
			"put": {
				"summary": "Update a measurement",
				"description": "Update an existing measurement. Users can only update their own measurements unless they have 'update-all-measurements' permission.",
				"tags": ["Measurements"],
				"security": [
					{
						"bearerAuth": []
					},
					{
						"cookieAuth": []
					}
				],
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"description": "UUID of the measurement to update",
						"schema": {
							"type": "string",
							"format": "uuid"
						}
					}
				],
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/MeasurementUpdate"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Measurement updated successfully",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Measurement"
								}
							}
						}
					},
					"400": {
						"description": "Validation error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ValidationError"
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized - missing or invalid access token",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Error"
								}
							}
						}
					},
					"404": {
						"description": "Measurement not found or not authorized to update",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Error"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT",
				"description": "JWT access token obtained from authentication service via Authorization header"
			},
			"cookieAuth": {
				"type": "apiKey",
				"in": "cookie",
				"name": "accessToken",
				"description": "JWT access token provided via accessToken cookie"
			}
		},
		"schemas": {
			"HealthResponse": {
				"type": "object",
				"properties": {
					"status": {
						"type": "string",
						"enum": ["ok", "degraded"],
						"description": "Overall health status"
					},
					"timestamp": {
						"type": "string",
						"format": "date-time",
						"description": "Current server timestamp"
					},
					"uptime": {
						"type": "number",
						"description": "Server uptime in seconds"
					},
					"database": {
						"type": "string",
						"enum": ["connected", "disconnected", "unknown"],
						"description": "Database connection status"
					}
				},
				"required": ["status", "timestamp", "uptime", "database"]
			},
			"MeasurementInput": {
				"type": "object",
				"properties": {
					"timestamp": {
						"type": "string",
						"format": "date-time",
						"description": "Timestamp of the measurement (defaults to current time if not provided)"
					},
					"type": {
						"type": "string",
						"enum": [
							"weight",
							"waist",
							"shoulder",
							"hip",
							"hips",
							"chest",
							"steps",
							"height"
						],
						"description": "Type of measurement"
					},
					"value": {
						"type": "string",
						"pattern": "^-?\\d+(\\.\\d+)?$",
						"description": "Numeric value of the measurement (stored as decimal)"
					}
				},
				"required": ["type", "value"]
			},
			"MeasurementUpdate": {
				"type": "object",
				"properties": {
					"timestamp": {
						"type": "string",
						"format": "date-time",
						"description": "Timestamp of the measurement"
					},
					"type": {
						"type": "string",
						"enum": [
							"weight",
							"waist",
							"shoulder",
							"hip",
							"hips",
							"chest",
							"steps",
							"height"
						],
						"description": "Type of measurement"
					},
					"value": {
						"type": "string",
						"pattern": "^-?\\d+(\\.\\d+)?$",
						"description": "Numeric value of the measurement (stored as decimal)"
					}
				},
				"description": "All fields are optional. Only provided fields will be updated."
			},
			"Measurement": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"format": "uuid",
						"description": "Unique identifier of the measurement"
					},
					"userId": {
						"type": "string",
						"format": "uuid",
						"description": "ID of the user who created the measurement"
					},
					"timestamp": {
						"type": "string",
						"format": "date-time",
						"description": "Timestamp when the measurement was taken"
					},
					"type": {
						"type": "string",
						"enum": [
							"weight",
							"waist",
							"shoulder",
							"hip",
							"hips",
							"chest",
							"steps",
							"height"
						],
						"description": "Type of measurement"
					},
					"value": {
						"type": "string",
						"pattern": "^-?\\d+(\\.\\d+)?$",
						"description": "Numeric value of the measurement"
					},
					"createdAt": {
						"type": "string",
						"format": "date-time",
						"description": "Timestamp when the record was created"
					},
					"updatedAt": {
						"type": "string",
						"format": "date-time",
						"description": "Timestamp when the record was last updated"
					}
				},
				"required": [
					"id",
					"userId",
					"timestamp",
					"type",
					"value",
					"createdAt",
					"updatedAt"
				]
			},
			"Error": {
				"type": "object",
				"properties": {
					"statusCode": {
						"type": "integer",
						"description": "HTTP status code"
					},
					"statusMessage": {
						"type": "string",
						"description": "Status message"
					},
					"message": {
						"type": "string",
						"description": "Error message"
					}
				}
			},
			"ValidationError": {
				"type": "object",
				"properties": {
					"statusCode": {
						"type": "integer",
						"example": 400
					},
					"statusMessage": {
						"type": "string",
						"example": "Validation Error"
					},
					"message": {
						"type": "string",
						"example": "Validation Error"
					},
					"data": {
						"type": "array",
						"description": "Array of validation issues from Zod",
						"items": {
							"type": "object",
							"properties": {
								"code": {
									"type": "string",
									"description": "Zod error code"
								},
								"path": {
									"type": "array",
									"items": {
										"oneOf": [{ "type": "string" }, { "type": "number" }]
									},
									"description": "Path to the invalid field"
								},
								"message": {
									"type": "string",
									"description": "Error message"
								}
							}
						}
					}
				}
			}
		}
	},
	"tags": [
		{
			"name": "Health",
			"description": "Health check endpoints"
		},
		{
			"name": "Measurements",
			"description": "Body measurement management endpoints"
		}
	]
}
